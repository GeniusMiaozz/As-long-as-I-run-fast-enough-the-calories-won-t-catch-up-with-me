page{
  background: #A5DEE4
}
.user_message {
  width: 100%;
  height: 300rpx;
  text-align: center; /*中心对齐*/
  flex-direction: row; /*水平方向排列*/
  display: flex; /*分散布局*/
  justify-content: space-around; /*弹性布局*/
  box-sizing: border-box; /*，指定两个箱子接壤，限定了盒子模型的总面积？？*/
  padding-top: 50rpx; /*容器内对象距离顶部50rpx*/
  background:#A8D8B9
}

.user_img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%; /*设定圆形*/
  margin-top: 20rpx; /*容器距离顶部10rpx*/
}

.user_welcome {
  width: 200px;
  height: 200rpx;
  flex-direction: column; /*水平方向排列*/
  box-sizing: border-box; /*，指定两个箱子接壤，限定了盒子模型的总面积？？*/
  padding-top: 30rpx; /*容器内对象距离顶部10rpx*/
}

